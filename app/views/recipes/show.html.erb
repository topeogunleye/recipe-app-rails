<p style="color: green"><%= notice %></p>

<%= render @recipe %>

<div class="container mx-auto mt-28 px-5 ">
 
  <%= link_to "Back to recipes", recipes_path, class:"no-underline hover:underline text-purple-700 text-lg"%>
  <%= link_to "Generate Shopping List", "/shopping_list/#{@recipe.id}", class:"no-underline hover:underline text-purple-700 text-lg"%>


<table class="table-auto min-h-full border-2 border-gray-600">
  <thead>
    <tr class="divide-x">
      <th class="flex align-left pl-1">Food</th>
      <th class="ml-0">Quantity</th>
      <th class="flex pl-1">Value</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% %>
     <tr
      key={mission.mission_id}
      class="odd:bg-gray-200 divide-x divide-gray-300"
    >
      <td class="flex align-top m-auto"><%= @recipe.name %></td>
      <td class="px-3 py-2"><%= @quantity %></td>
      <td><%= @price %></td>
      <td>
          <div class="status w-64 flex justify-around text-xs">
            <span class="badge bg-blue-400 text-white rounded-sm px-1 py-0.5 uppercase grid place-items-center">
               <%= link_to "Edit this recipe", edit_recipe_url(@recipe) %>
            </span>
          </div>
      </td>
      <td>
          <div class="w-64 flex justify-around text-xs">
            <button
              type="button"
              class="text-sm text-red-600 border-red-400 rounded-sm border-2 px-1 py-0.5"
            >
              <%= link_to "Delete this recipe", recipe_url(@recipe), method: :delete, data: { confirm: "Are you sure?" } %>
            </button>
          </div>

      </td>
    </tr>
  </tbody>
</table>


</div>